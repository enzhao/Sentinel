{
  "name": "sentinel-monorepo",
  "version": "0.3.0",
  "private": true,
  "description": "Root package for the Sentinel monorepo, managing shared dev dependencies and release scripts.",
  "main": "index.js",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0"
  },
  "scripts": {
    "prepare": "husky",
    "release": "standard-version"
  },
  "standard-version": {
    "types": [
      {"type": "feat", "section": "Features"},
      {"type": "fix", "section": "Bug Fixes"},
      {"type": "docs", "section": "Documentation", "hidden": false},
      {"type": "chore", "hidden": true},
      {"type": "refactor", "section": "Refactor", "hidden": false},
      {"type": "test", "section": "Test", "hidden": false},
      {"type": "build", "section": "Build and CI", "hidden": false},
      {"type": "ci", "section": "Build and CI", "hidden": false},
      {"type": "perf", "section": "Performance Improvements", "hidden": false},
      {"type": "revert", "hidden": true},
      {"type": "style", "section": "Style Changes", "hidden": false}
    ]
  }
}
